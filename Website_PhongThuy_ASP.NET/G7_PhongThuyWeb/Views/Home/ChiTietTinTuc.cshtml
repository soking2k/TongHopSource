@model G7_PhongThuyWeb.Models.TinTuc
@using PagedList.Mvc;
@using G7_PhongThuyWeb.Models;
@{
    ViewBag.Title = "ChiTietTinTuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="aa-blog-archive">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-blog-archive-area">
                    <div class="row">
                        <div class="col-md-9">
                            <!-- Blog details -->
                            <div class="aa-blog-content aa-blog-details">
                                <article class="aa-blog-content-single">
                                    <h2><a href="#">@Html.DisplayFor(model => model.title)</a></h2>
                                    <div class="aa-article-bottom">
                                        <div class="aa-post-author">
                                            Đăng bởi <a href="#">@Html.DisplayFor(model => model.author)</a>
                                        </div>
                                        <div class="aa-post-date">@Html.DisplayFor(model => model.created)</div>
                                    </div>
                                    <figure class="aa-blog-img">
                                        <a href="#"><img src="~/Content/images/@Html.DisplayFor(model => model.image_link)" alt="fashion img"></a>
                                    </figure>
                                    <p>
                                        @{string contentck;}
                                        @{ contentck = Model.content;}
                                        @Html.Raw(contentck)
                                    </p>

                                </article>
                            </div>
                        </div>
                        <!-- blog sidebar -->
                        <div class="col-md-3">
                            <aside class="aa-blog-sidebar">

                                <div class="aa-sidebar-widget">
                                    <h3>Bài đăng gần đây</h3>
                                    <div class="aa-recently-views">
                                        <ul>
                                            @{ string id = "";}
                                            @foreach (TinTuc item in (List<TinTuc>)ViewBag.TinTuc)
                                            {
                                                id = ViewBag.id;
                                                <li>
                                                    <a class="aa-cartbox-img" href="~/Home/ChiTietTinTuc?id=@item.id"><img src="~/Content/images/@Html.DisplayFor(modelItem => item.image_link)" alt="img bài viết"></a>
                                                    <div class="aa-cartbox-info">
                                                        <h4><a href="~/Home/ChiTietTinTuc?id=@item.id"><b>@item.title</b></a></h4>
                                                        <p>@item.created</p>
                                                    </div>
                                                </li>
                                            }
                                            

                                        </ul>
                                    </div>
                                </div>
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>