@model G7_PhongThuyWeb.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Admin/Plugin/ckeditor/ckeditor.js"></script>
<h2>Create</h2>




    <div class="content-wrapper">
        <div class="container-fluid">

            <div class="row mt-3">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <font color="green"><h3>Tạo Sản Phẩm</h3></font>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <label for="input-1">Loại Sản Phẩm</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @*@Html.EditorFor(model => model.loaisp_id, new { htmlAttributes = new { @class = "form-control" } })*@
                                        @Html.DropDownList("loaisp_id", (IEnumerable<SelectListItem>)ViewBag.types, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.loaisp_id, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <label for="input-1">Tên sản phẩm</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <label for="input-1">Giá Sản Phẩm</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <label for="input-1">Trạng Thái Sản Phẩm</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <label for="input-1">Mô Tả Ngắn</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <label for="input-1">Mô Tả Chi Tiết</label>
                                <div class="form-group">
                                    <div ass="col-md-10">
                                        @*@Html.TextAreaFor(model => model.content, new { @id = "FullDescription", @class = "form-control", @rows = "200" }) @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })*@
                                        @Html.TextAreaFor(model => model.content, new { @id = "ckeContent" })
                                        <script>
                                            CKEDITOR.replace("ckeContent");
                                        </script>
                                    </div>
                                </div>
                                <label for="input-1">Khuyến Mãi (%)</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.discount, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <label for="input-1">Ảnh Sản Phẩm</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <input type="file" name="Images" />
                                        @*@Html.EditorFor(model => model.image_link, new { htmlAttributes = new { @class = "form-control" } })*@
                                        @Html.ValidationMessageFor(model => model.image_link, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <label for="input-1">Ngày Tạo</label>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.created, new
                                   {
                                       htmlAttributes = new
                                       {
                                            @class = "form-control",
                                            @type = "date",
                                            @Value = Model.created.ToString("yyyy-MM-dd"),
                                       }

                                   })
                                        @*@Html.EditorFor(model => model.created, new { htmlAttributes = new { @class = "form-control", type="date" } })*@
                                        @Html.ValidationMessageFor(model => model.created, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <button type="submit" value="Create" class="btn btn-success">Tạo Sản Phẩm</button>
                                <a href="/Admin/Product" target="_self">
                                    <img class="pointer" style="cursor: pointer;" src="~/Content/admin/img/huy.png">

                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="overlay toggle-menu"></div>
        </div>
    </div>


