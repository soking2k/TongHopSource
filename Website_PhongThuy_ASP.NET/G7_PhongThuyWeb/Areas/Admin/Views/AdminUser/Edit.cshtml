@model G7_PhongThuyWeb.Models.user

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper" style="margin-left: 0px;">

    <div class="content-wrapper">
        <div class="container-fluid">

            <div class="row mt-3">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">Sửa User</div>
                            <hr>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.id)
                                <form action="/test/view/admin/edituser" method="post">
                                    <div class="form-group">
                                        <label for="input-1">Họ tên</label>
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        <label for="input-2">Email</label>
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        <label for="input-3">Số điện thoại</label>
                                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        <label for="input-3">UserName</label>
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control",@readonly="readonly" } })
                                    </div>
                                    <div class="form-group">
                                        <label for="input-4">Mật khẩu</label>
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password", id = "myinput" } })
                                        <input type="checkbox" onclick="myFunction1()">Hiển thị mật khẩu
                                        <script>
                                            function myFunction1() {
                                                var x = document.getElementById("myinput");
                                                if (x.type === "password") {
                                                    x.type = "text";
                                                } else {
                                                    x.type = "password";
                                                }
                                            }

                                        </script>

                                    </div>
                                    <div class="form-group">
                                        <label for="input-5">Date</label>
                                        @Html.EditorFor(model => model.created, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>

                                    <div class="form-group">

                                        <button type="submit" class="btn btn-success">Cập nhật</button>
                                        <a href="/Admin/AdminUser" target="_self"><img class="pointer" style="cursor: pointer;" src="~/Content/admin/img/huy.png">

                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="overlay toggle-menu"></div>
        </div>
    </div>

    </div>